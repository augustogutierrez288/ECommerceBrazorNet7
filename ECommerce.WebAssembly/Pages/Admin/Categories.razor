@page "/categories"

@inject ICategoryService _categoryService
@inject IToastService _toastService
@inject SweetAlertService Swal

@attribute [Authorize(Roles = "Administrador")]

<div class="row justify-content-center  mt-3">
    <div class="col-sm-6 col-md-4 col-xl-3 mb-4">
        <div class="d-grid gap-1 col-12 mx-auto">
            <a class="btn btn-primary" href="/category">Nueva Categoria</a>
        </div>
    </div>
    <div class="col-sm-6 col-md-8 col-xl-9 mb-4">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Buscar categoria..." @bind-value="found">
            <button class="btn btn-outline-primary" type="button" @onclick="(async()=> await GetCategory(found))">
                <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#ffffff">
                    <path d="M784-120 532-372q-30 24-69 38t-83 14q-109 0-184.5-75.5T120-580q0-109 75.5-184.5T380-840q109 0 184.5 75.5T640-580q0 44-14 83t-38 69l252 252-56 56ZM380-400q75 0 127.5-52.5T560-580q0-75-52.5-127.5T380-760q-75 0-127.5 52.5T200-580q0 75 52.5 127.5T380-400Z" />
                </svg>
            </button>
        </div>
    </div>
</div>

<div class="row gx-4 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 justify-content-start mt-2">

    @if (listCategory != null)
    {
        foreach(var item in listCategory)
        {
            <div class="col mb-5">
                <div class="card h-100 border border-light">
                    <div class="card-body p-4">
                        <div class="text-center">
                            <div class="text-center">
                                <i class="oi oi-folder" style="font-size:50px"></i>
                            </div>
                            <div class="text-start">
                                <p class="m-1"><b>Nombre:</b> @item.NameCategory</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="row justify-content-between">
                            <a class="col-5 btn btn-sm btn-primary mt-auto" href="/category/@item.IdCategory">
                                <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#ffffff">
                                    <path d="M647-440H160v-80h487L423-744l57-56 320 320-320 320-57-56 224-224Z" />
                                </svg>
                            </a>
                            <button class="col-5 btn btn-sm btn-danger mt-auto" type="button" @onclick="(async () => await DeleteCategory(item))">
                                
                                <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#ffffff">
                                    <path d="M280-120q-33 0-56.5-23.5T200-200v-520h-40v-80h200v-40h240v40h200v80h-40v520q0 33-23.5 56.5T680-120H280Zm400-600H280v520h400v-520ZM360-280h80v-360h-80v360Zm160 0h80v-360h-80v360ZM280-720v520-520Z" />
                                </svg>
                              
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    }
</div>

@code {
    private List<CategoryDTO>? listCategory = null;
    private string found = string.Empty;

    private async Task GetCategory(string value = "")
    {
        var response = await _categoryService.ListCategory(value);
        if (response.IsCorrect)
        {
            listCategory = (List<CategoryDTO>)response.Result!;
        }
        else
        {
            listCategory = new List<CategoryDTO>();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await GetCategory();
    }

    private async Task DeleteCategory(CategoryDTO model)
    {
        SweetAlertResult result = await Swal.FireAsync(new SweetAlertOptions
            {
                Title = "¿Estas Seguro?",
                Text = $"Eliminar categoria: {model.NameCategory}",
                Icon = SweetAlertIcon.Warning,
                ShowCancelButton = true,
                ConfirmButtonText = "Si, eliminar",
                CancelButtonText = "No, volver",
            });

        if (result.IsConfirmed)
        {
            var response = await _categoryService.DeleteCategory(model.IdCategory);
            if (response.IsCorrect)
            {
                await GetCategory();
                _toastService.ShowSuccess("La categoria fue eiminada");
            }
            else
            {
                _toastService.ShowWarning(response.Message);
            }
        }
    }
}
